{
  "name": "roots/bedrock",
  "type": "project",
  "license": "MIT",
  "description": "A modern WordPress stack",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    },
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    }
  ],
  "keywords": [
    "bedrock", "roots", "wordpress", "stack", "composer", "vagrant", "wp"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "https://discourse.roots.io/category/bedrock"
  },
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "http://wpackagist.org"
    },
    {
      "type": "package",
      "package": {
        "name": "wordpress/wordpress",
        "version": "4.4.1",
        "type": "webroot",
        "dist": {
          "type": "zip",
          "url": "https://sv.wordpress.org/wordpress-4.4.1-sv_SE.zip"
        },
        "require" : {
          "fancyguy/webroot-installer": "1.1.0"
        }
      }
    }
  ],
  "require": {
    "php": ">=5.5",
    "composer/installers": "~1.0.12",
    "vlucas/phpdotenv": "^2.0.1",
    "wordpress/wordpress": "4.4.1",
    "wp-papi/papi": "*",
    "frozzare/digster": "*",
    "wpackagist-plugin/google-apps-login": "*",
    "deployer/deployer": "*",
    "johnbillion/extended-cpts": "*",
    "johnbillion/extended-taxos": "*",
    "wpackagist-plugin/wordpress-seo": "*",
    "wpackagist-plugin/google-analytics-dashboard-for-wp": "*",
    "wpackagist-plugin/varnish-http-purge": "*",
    "wpackagist-plugin/wp-media-library-categories":"*",
    "wpackagist-plugin/admin-menu-editor":"*"
  },
  "extra": {
    "installer-paths": {
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "webroot-dir": "web/wp",
    "webroot-package": "wordpress/wordpress"
  }
}
